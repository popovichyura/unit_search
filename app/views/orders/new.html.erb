<div class="main">
  <div class="container my-container">
    <div class="content">
        <h1>Orders</h1>
        <%= form_for @order do |f| %>
        <div class="row">
          <div class="col-md-4">
              <div class="form-group">
                  <%= f.label :firstname %>
                  <%= f.text_field :firstname, class: 'form-control' %>
              </div>
          </div>
          <div class="col-md-4">
            <div class="form-group">
                  <%= f.label :lastname %>
                  <%= f.text_field :lastname, class: 'form-control' %>
            </div>
          </div>
          <div class="col-md-3">
            <div class="form-group">
            <p><%= f.label "count"  %></p>
            <%= f.select :count, ['1','2','3'], class: 'form-control' %><br />
          </div>
            </div>
          </div>
        <div class="row">
          <div class="col-md-3">
                  <%= f.label :from %>
                  <%= f.text_field :from, class: 'form-control' %>
          </div>
          <div class="col-md-3">
                  <%= f.label :to %>
                  <%= f.text_field :to, class: 'form-control' %>
          </div>
          <div class="col-md-3">
                  <%= f.label :date %>
                  <%= f.text_field :date, class: 'form-control', type: 'date', placeholder: 'date'  %>
          </div>
          <div class="col-md-3">
            <div class="form-group" style="margin-top: 27px;" align="right">
             <%= f.submit 'Зберегти', class: 'btn btn-primary' %>
             <%= link_to 'Назад', :back, class: 'btn btn-outline-secondary'%>
            </div>
          </div>
        </div>
      </div>


      <%end%>
      </div>    
    </div>
</div>
